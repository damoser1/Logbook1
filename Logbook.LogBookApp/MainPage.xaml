<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Logbook.LogBookApp.MainPage"
             Shell.NavBarIsVisible="False"
             xmlns:viewmodels="clr-namespace:Logbook.LogBookApp.ViewModel"
             x:DataType="viewmodels:MainViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Appearing"
                                        Command="{Binding LoadDataCommand}"/>
    </ContentPage.Behaviors>

    <Grid RowDefinitions="Auto,180">

        <Label Text="{Binding Header}"/>

        <Grid Grid.Row="1" Grid.Column="0" RowDefinitions="Auto,*">
            <!-- Header -->
            <Grid ColumnDefinitions="100,2*,*,*" Grid.Row="0">
                <Label Grid.Column="0" Text="Datum" Padding="5"/>
                <Label Grid.Column="1" Text="Beschreibung" Padding="5"/>
                <Label Grid.Column="2" Text="Von" Padding="5"/>
                <Label Grid.Column="3" Text="Nach" Padding="5"/>
            </Grid>
            
            <!-- Data -->
            <CollectionView Grid.Row="1">
                <CollectionView.EmptyView>
                    <Label Text="Es wurde keine Fahrt hinzugefügt."/>
                </CollectionView.EmptyView>
            </CollectionView>
        </Grid>

    </Grid>

</ContentPage>
